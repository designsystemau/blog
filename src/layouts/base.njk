<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="canonical" href={{ page.url | url | absoluteUrl(site.url) }} />

    {% audscss %}
    {% bundledcss %}

    <title>
      {{  title  | escape }}
      {% if title %}
         | {{ site.name }}
      {% else %}
        {{ site.name }}
      {% endif %}
    </title>

    <link rel="icon" type= “image/x-icon” href="/images/favicon.ico" />

    <meta property="og:title" content="{{  title or site.name | escape }}" />
    <meta property="og:site_name" content="{{ site.name }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ site.url + page.url }}" />
    <meta name="twitter:card" content="summary_large_image" />

    {% set desc = description %}
    {% if not desc %}
      {% set desc = content | striptags | truncate(140) %}
    {% endif %}
    {% if desc %}
      <meta name="description" content="{{ desc | escape  }}" />
      <meta property="og:description" content="{{ desc | escape }}" />
      <meta name="description" content="{{ desc | escape }}" />
    {% endif %}

    {% if not socialImage %}
      {% set socialImage = site.defaultSocialImage %}
    {% endif %}
    {% if socialImage %}
      <meta property="og:image" content="{{ socialImage | url | absoluteUrl(site.url) }}"/>
      <meta name="twitter:image" content="{{ socialImage | url | absoluteUrl(site.url) }}"/>
    {% endif %}
  </head>
  <body class="au-grid">
    <div class="au-body">

      <nav class="au-skip-link">
        <a class="au-skip-link__link" href="#content">Skip to main content</a>
        <a class="au-skip-link__link" href="#mainmenu">Skip to main navigation</a>
      </nav>

      <div class="layout-wrapper">

        <header class="header">
          <div class="header__content">
            <h1 class="site-title">
              <a href={{ "/" | url }}>
                {{site.name}}
              </a>
            </h1>

            {% if site.headerLinks %}
              <nav class="nav" id="#mainmenu">
                <ul class="nav__list">
                  {% for item in site.headerLinks %}
                    {% set currentAttribute = '' %}
                    {% set externalAttribute = '' %}

                    {% if item.external %}
                      {% set externalAttribute = 'target="_blank" rel="noopener noreferrer"' %}
                    {% endif %}

                    {% if page.url == item.url %}
                      {% set currentAttribute = 'aria-current="page"' %}
                    {% endif %}

                    <li class="nav-item">
                      <a href="{{ item.url | url }}" {{ currentAttribute | safe }} {{ externalAttribute | safe }}>{{ item.text }}</a>
                    </li>
                  {% endfor %}
                </ul>
              </nav>

            {% endif %}

          </div>
        </header>

        <main class="main" id="content">
          {{ content | safe }}
        </main>

        <footer class="footer">
          <div class="footer__content">

            <ul class="hero__social-links">
              {% if site.footerLinks %}

                {% for item in site.footerLinks %}
                  {% set externalAttribute = '' %}

                  {% if item.external %}
                    {% set externalAttribute = 'target="_blank" rel="noopener noreferrer"' %}
                  {% endif %}

                  <li>
                    <a href="{{ item.url | url }}" {{ externalAttribute | safe }}>{{ item.text }}</a>
                  </li>
                {% endfor %}
              {% endif %}
            </ul>

        </div>
      </footer>

      {% audsjs %}
      {% bundledjs %}

      <script async src="https://www.googletagmanager.com/gtag/js?id=G-T7JHW8GB2Q"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-T7JHW8GB2Q');
      </script>
    </div>
  </body>
</html>

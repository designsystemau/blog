---
layout: base
---

<div class="au-body">
  <header class="hero">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <div class="hero-content">
            <div class="intro">
              {{ content | safe }}
            </div>

            {% if site.socialLinks %}
              <ul class="hero__social-links">
                {% for item in site.socialLinks %}
                  {% set externalAttribute = '' %}

                  {% if item.external %}
                    {% set externalAttribute = 'target="_blank" rel="noopener noreferrer"' %}
                  {% endif %}

                  <li>
                    <a href="{{ item.url | url }}" {{ externalAttribute | safe }}>{{ item.text }}</a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </header>
</div>

<div class="page-container">
  <section class="post-list__wrapper">
    {% set postslist = collections.posts | head(-10) %}
    {% include "posts-list.njk" %}
  </section>

  <a class="all-posts-link" href="{{ '/posts' | url }}">View All Posts</a>
</div>
